<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="24dp"
        android:background="@drawable/ic_back"
        android:foreground="@drawable/circle_ripple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sport_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="24dp"
        android:src="@drawable/ic_bike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Volleyball"
        android:textColor="@color/black_blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/sport_iv"
        app:layout_constraintStart_toStartOf="@+id/sport_iv"
        app:layout_constraintTop_toBottomOf="@id/sport_iv" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv">

        <TextView
            android:id="@+id/infoo_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/poppins_regular"
            android:justificationMode="inter_word"
            android:textColor="@color/black_blue"
            android:textSize="16sp"
            tools:text="@tools:sample/lorem/random" />

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>